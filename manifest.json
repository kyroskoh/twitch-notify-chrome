{
  "manifest_version": 2,
  "name": "twitch-notify",
  "description": "This extension notifies you when twitch streams go live",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "https://api.twitch.tv/"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon_gray.png",
    "default_popup": "browser_action.html"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  }
}

