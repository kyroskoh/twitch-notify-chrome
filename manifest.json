{
  "manifest_version": 2,
  "name": "twitch-notify",
  "description": "This extension notifies you when twitch streams go live",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "https://api.twitch.tv/"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "browser_action.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}

